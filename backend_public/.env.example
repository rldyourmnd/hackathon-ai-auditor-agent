# Backend Public Service Environment Example
ENV=development
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql+asyncpg://curestry:secure_password@db:5432/curestry

# Internal API base (points to main backend service in docker-compose)
INTERNAL_API_BASE=http://api:8000

# App server
APP_HOST=0.0.0.0
APP_PORT=8080
APP_DEBUG=true
APP_SECRET=change_me_super_secret

# CORS
CORS_ORIGINS=http://localhost:3000

# Auth/Admin
ADMIN_EMAILS=admin@example.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT=http://localhost:8080/auth/google/callback

# JWT
JWT_ISSUER=auditor.public
JWT_EXPIRE_MINUTES=120

# HTTP client timeout
HTTP_TIMEOUT_SECONDS=30
